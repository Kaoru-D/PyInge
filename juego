for each in x==num1:
     factorial=factorial*x
     x=x-1
print(f'El factorial de { num1}  es  {factorial}')

#Ejercicio 3
print('Vamos a hallar el área de un triángulo')
base=print('Ingrese la base')
altura=print('Ingrese la altura')

area=0.5*base*altura
print(f'El área de su triángulo es  {area}')