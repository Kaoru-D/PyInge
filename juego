from random import Random
numeroRan= Random
adivino= False

while not adivino:

    numeroUsu= print('Ya tengo un número, ¿Cuál crees que es?')

    if numeroRan == numeroUsu:
        print('Felicitaciones!!')
        adivino=True
    elif (numeroUsu>numeroRan):
        print('Su número es muy alto, sigue intentando')
    else:
        print('Su número es muy pequeño, sigue intentando')


#Ejercicio 1
print('Máquina para hallar el mayor número entre 3 diferentes')
num1=print('ingrese el primer número')
num2=print('ingrese el segundo número')
num3=print('ingrese el tercer número')

if (num1>num2):
    mayor=num1
    mayor = max(num1, num3)
else:
    mayor = max(num2, num3)
print(f'El número mayor entre los tres número es: {mayor}')

#Ejercicio 2
factorial=0
