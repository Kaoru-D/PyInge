num1 = 0
num1 = int(input('digite un número '))
if (num1 == 0):
    print('su número es 0')
    
elif (num1%2 == 0):
    print(num1, 'es un número par')
else:
    print(num1, ' es un número impar')

suma = 0
comienzo = 0
num1 = int(input('Digite un número positivo cualquiera el cual desea saber la suma entre estos '))
if (num1 <= 0):
    print('Por favor ingrese un número mayor a 0')
x=num1
while x>0:
    suma = suma + x
    x=x-1
    
print('la suma de todos los valores hasta',num1,' es: ',suma)
